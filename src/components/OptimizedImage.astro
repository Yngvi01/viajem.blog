---
import { Image } from 'astro:assets';
import { getImageSource } from '../utils/imageImports';

export interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  class?: string;
  quality?: number;
  loading?: 'eager' | 'lazy';
  format?: 'webp' | 'avif' | 'png' | 'jpg' | 'jpeg';
  sizes?: string;
  priority?: boolean;
  fetchpriority?: 'high' | 'low' | 'auto';
}

const { 
  src, 
  alt, 
  width = 800, 
  height = 600, 
  class: className = '', 
  quality = 80,
  loading = 'lazy',
  format = 'webp',
  sizes = '(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 800px',
  priority = false,
  fetchpriority = 'auto'
} = Astro.props;

const imageSrc = getImageSource(src);
const actualLoading = priority ? 'eager' : loading;
const actualFetchPriority = priority ? 'high' : fetchpriority;
---

<Image 
  src={imageSrc} 
  alt={alt} 
  width={width} 
  height={height} 
  class={className}
  quality={quality}
  loading={actualLoading}
  format={format}
  sizes={sizes}
  fetchpriority={actualFetchPriority}
/>