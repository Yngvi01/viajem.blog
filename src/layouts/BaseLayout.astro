---
import YukinaConfig from "../../yukina.config";
import BaseHead from "../components/BaseHead.astro";
---

<html lang={YukinaConfig.locale || "en"} dir="ltr" itemscope itemtype="https://schema.org/WebPage">
  <head>
    <BaseHead {...Astro.props} />
  </head>
  <body>
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-PKQ7KJKC"
height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->
    <a href="#main-content" class="skip-link visually-hidden">Pular para o conteúdo principal</a>
    <div data-pagefind-body>
      <main id="main-content" role="main">
        <slot />
      </main>
    </div>
    <!-- Scripts de otimização carregados em ordem de prioridade -->
    <script src="/css-js-optimization.js" defer></script>
    <script src="/performance-optimizations.js" defer></script>
    <script src="/lazy-load.js" defer></script>
    <script src="/image-optimization.js" defer></script>
    <script src="/third-party-optimization.js" defer></script>
  </body>
</html>

<style>
  body {
    @apply bg-[var(--background-color)];
  }
</style>
