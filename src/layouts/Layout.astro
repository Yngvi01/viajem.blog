  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Preconexão com domínios frequentes -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <!-- Scripts de otimização de performance -->
    <script src="/performance-optimizations.js" defer></script>
    <script src="/image-optimization.js" defer></script>
    <script src="/css-js-optimization.js" defer></script>
    <script src="/third-party-optimization.js" defer></script>
    
    <!-- Adiar carregamento de recursos não críticos -->
    <link rel="preload" as="style" href={fontUrl} onload="this.onload=null;this.rel='stylesheet'" />
    <noscript><link rel="stylesheet" href={fontUrl} /></noscript>
    
    <!-- Incluir CSS crítico inline para melhorar o FCP -->
    <style is:inline>
      /* Estilos críticos para o primeiro carregamento */
      :root {
        --primary-color: #2563eb;
        --primary-color-darken: #1d4ed8;
        --primary-color-lighten: #dbeafe;
      }
      body {
        margin: 0;
        padding: 0;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
      }
      /* Evitar layout shift durante o carregamento */
      .post-content img, .post-banner {
        aspect-ratio: 16/9;
      }
      /* Placeholder para imagens durante o carregamento */
      img:not([src]) {
        background-color: #f3f4f6;
      }
    </style>
  </head> 